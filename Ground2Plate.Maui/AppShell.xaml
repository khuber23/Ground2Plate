<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ground2Plate.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ground2Plate.Maui"
    xmlns:pages="clr-namespace:Ground2Plate.Maui.Pages"
    xmlns:viewmodel="clr-namespace:Ground2Plate.Maui.ViewModels"
    x:DataType="viewmodel:AppShellViewModel"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" 
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"/>

    <!--Side Bar-->
    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Icon="icon_home.png" Title="Home" ContentTemplate="{DataTemplate pages:HomePage}"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate pages:AboutPage}"/>
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate pages:ContactPage}"/>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Sign Out" Command="{Binding SignOutCommand}" BackgroundColor="IndianRed" TextColor="White"/>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
